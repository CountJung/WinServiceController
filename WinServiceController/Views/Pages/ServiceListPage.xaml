<Page
    x:Class="WinServiceController.Views.Pages.ServiceListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WinServiceController.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ServiceListPage"
    d:DataContext="{d:DesignInstance local:ServiceListPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <!--  Row 0: Header (pinned)  -->
            <RowDefinition Height="Auto" />
            <!--  Row 1: Search (pinned)  -->
            <RowDefinition Height="Auto" />
            <!--  Row 2: Buttons (pinned)  -->
            <RowDefinition Height="Auto" />
            <!--  Row 3: Service list (scrollable, takes remaining space)  -->
            <RowDefinition Height="400" MinHeight="180" />
            <!--  Row 4: Chart header (pinned)  -->
            <RowDefinition Height="Auto" />
            <!--  Row 5: Charts (fixed bottom)  -->
            <RowDefinition Height="3*" MinHeight="200" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            FontSize="24"
            FontWeight="SemiBold"
            Text="Services" />

        <!--  Search + Refresh  -->
        <Grid Grid.Row="1" Margin="0,12,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ui:TextBox
                Grid.Column="0"
                PlaceholderText="Search services..."
                Text="{Binding ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <ui:Button
                Grid.Column="1"
                Margin="8,0,0,0"
                Appearance="Transparent"
                Command="{Binding ViewModel.RefreshServicesCommand, Mode=OneWay}"
                Icon="{ui:SymbolIcon ArrowSync24}"
                ToolTip="Refresh" />
        </Grid>

        <!--  Control Buttons  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,2,0,6"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <ui:Button
                Margin="0,0,8,0"
                Appearance="Success"
                Command="{Binding ViewModel.StartServiceCommand, Mode=OneWay}"
                Content="Start"
                Icon="{ui:SymbolIcon Play24}" />
            <ui:Button
                Margin="0,0,8,0"
                Appearance="Danger"
                Command="{Binding ViewModel.StopServiceCommand, Mode=OneWay}"
                Content="Stop"
                Icon="{ui:SymbolIcon Stop24}" />
            <ui:Button
                Margin="0,0,8,0"
                Appearance="Caution"
                Command="{Binding ViewModel.RestartServiceCommand, Mode=OneWay}"
                Content="Restart"
                Icon="{ui:SymbolIcon ArrowSync24}" />
            <ui:Button
                Margin="16,0,0,0"
                Appearance="Danger"
                Command="{Binding ViewModel.RequestDeleteServiceCommand, Mode=OneWay}"
                Content="Delete"
                Icon="{ui:SymbolIcon Delete24}"
                ToolTip="Permanently remove this service" />
        </StackPanel>

        <!--  Service List (independently scrollable)  -->
        <ui:ListView
            Grid.Row="3"
            ItemsSource="{Binding ViewModel.Services, Mode=OneWay}"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            SelectedItem="{Binding ViewModel.SelectedService, Mode=TwoWay}">
            <ui:ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="Chart">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox
                                    HorizontalAlignment="Center"
                                    IsChecked="{Binding ShowInChart, Mode=TwoWay}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Width="220"
                        DisplayMemberBinding="{Binding DisplayName}"
                        Header="Display Name" />
                    <GridViewColumn
                        Width="160"
                        DisplayMemberBinding="{Binding ServiceName}"
                        Header="Service Name" />
                    <GridViewColumn
                        Width="90"
                        DisplayMemberBinding="{Binding StatusText}"
                        Header="Status" />
                    <GridViewColumn
                        Width="80"
                        DisplayMemberBinding="{Binding CpuUsage, StringFormat='{}{0:F1}'}"
                        Header="CPU (%)" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding MemoryMB, StringFormat='{}{0:F1}'}"
                        Header="Memory (MB)" />
                </GridView>
            </ui:ListView.View>
        </ui:ListView>

        <!--  Chart Header  -->
        <Grid Grid.Row="4" Margin="0,8,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Text="{Binding ViewModel.ChartTitle, Mode=OneWay}" />

            <ui:Button
                Grid.Column="1"
                Margin="12,0,0,0"
                Appearance="Transparent"
                Command="{Binding ViewModel.ClearChartCommand, Mode=OneWay}"
                Icon="{ui:SymbolIcon Delete24}"
                ToolTip="Clear chart data" />
        </Grid>

        <!--  Charts: CPU (left) + Memory (right)  -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border x:Name="CpuChartHost" Grid.Column="0" Margin="0,0,4,0" />
            <Border x:Name="MemoryChartHost" Grid.Column="1" Margin="4,0,0,0" />
        </Grid>

        <!--  Delete Confirmation Overlay  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="7"
            Visibility="{Binding ViewModel.IsDeleteDialogOpen, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="#80000000" />
            <Border
                Padding="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{DynamicResource ApplicationBackgroundBrush}"
                CornerRadius="8">
                <StackPanel MaxWidth="400">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Delete Service?" />
                    <TextBlock
                        Margin="0,12,0,0"
                        TextWrapping="Wrap">
                        <Run Text="This will permanently remove" />
                        <Run FontWeight="Bold" Text="{Binding ViewModel.SelectedService.DisplayName, Mode=OneWay}" />
                        <Run Text="from the system. This action cannot be undone." />
                    </TextBlock>
                    <StackPanel
                        Margin="0,24,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <ui:Button
                            Margin="0,0,8,0"
                            Command="{Binding ViewModel.CancelDeleteServiceCommand, Mode=OneWay}"
                            Content="Cancel" />
                        <ui:Button
                            Appearance="Danger"
                            Command="{Binding ViewModel.ConfirmDeleteServiceCommand, Mode=OneWay}"
                            Content="Delete"
                            Icon="{ui:SymbolIcon Delete24}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
