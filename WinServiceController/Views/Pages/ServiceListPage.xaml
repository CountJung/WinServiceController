<Page
    x:Class="WinServiceController.Views.Pages.ServiceListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WinServiceController.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ServiceListPage"
    d:DataContext="{d:DesignInstance local:ServiceListPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="FilterPopupBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource ApplicationBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ControlElevationBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.25"
                        ShadowDepth="2" />
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="400" MinHeight="180" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*" MinHeight="200" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            FontSize="24"
            FontWeight="SemiBold"
            Text="Services" />

        <!--  Search + Refresh  -->
        <Grid Grid.Row="1" Margin="0,12,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ui:TextBox
                Grid.Column="0"
                PlaceholderText="Search services..."
                Text="{Binding ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <ui:Button
                Grid.Column="1"
                Margin="8,0,0,0"
                Appearance="Transparent"
                Command="{Binding ViewModel.RefreshServicesCommand, Mode=OneWay}"
                Icon="{ui:SymbolIcon ArrowSync24}"
                ToolTip="Refresh" />
        </Grid>

        <!--  Control Buttons + Filter Toolbar  -->
        <Grid Grid.Row="2" Margin="0,2,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <ui:Button
                    Margin="0,0,8,0"
                    Appearance="Success"
                    Command="{Binding ViewModel.StartServiceCommand, Mode=OneWay}"
                    Content="Start"
                    Icon="{ui:SymbolIcon Play24}" />
                <ui:Button
                    Margin="0,0,8,0"
                    Appearance="Primary"
                    Command="{Binding ViewModel.StopServiceCommand, Mode=OneWay}"
                    Content="Stop"
                    Icon="{ui:SymbolIcon Stop24}" />
                <ui:Button
                    Margin="0,0,8,0"
                    Appearance="Caution"
                    Command="{Binding ViewModel.RestartServiceCommand, Mode=OneWay}"
                    Content="Restart"
                    Icon="{ui:SymbolIcon ArrowSync24}" />
                <ui:Button
                    Margin="32,0,0,0"
                    Appearance="Danger"
                    Command="{Binding ViewModel.RequestDeleteServiceCommand, Mode=OneWay}"
                    Content="Delete"
                    Icon="{ui:SymbolIcon Delete24}"
                    ToolTip="Permanently remove this service" />
            </StackPanel>

            <!--  Filter buttons (right-aligned)  -->
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,6,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Filters:" />
                <ui:Button
                    x:Name="StatusFilterBtn"
                    Margin="0,0,4,0"
                    Appearance="Secondary"
                    Click="OnStatusFilterClick"
                    Content="Status"
                    FontSize="12"
                    Icon="{ui:SymbolIcon Filter24}" />
                <ui:Button
                    x:Name="CpuFilterBtn"
                    Margin="0,0,4,0"
                    Appearance="Secondary"
                    Click="OnCpuFilterClick"
                    Content="CPU"
                    FontSize="12"
                    Icon="{ui:SymbolIcon Filter24}" />
                <ui:Button
                    x:Name="MemFilterBtn"
                    Appearance="Secondary"
                    Click="OnMemFilterClick"
                    Content="Memory"
                    FontSize="12"
                    Icon="{ui:SymbolIcon Filter24}" />
            </StackPanel>
        </Grid>

        <!--  Active filter summary  -->
        <StackPanel
            Grid.Row="3"
            Margin="0,0,0,2"
            Orientation="Horizontal"
            Visibility="{Binding ViewModel.HasActiveFilter, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="11"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="{Binding ViewModel.ActiveFilterSummary, Mode=OneWay}" />
        </StackPanel>

        <!--  Service List  -->
        <ui:ListView
            x:Name="ServiceListView"
            Grid.Row="4"
            ItemsSource="{Binding ViewModel.ServicesView, Mode=OneWay}"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            SelectedItem="{Binding ViewModel.SelectedService, Mode=TwoWay}">
            <ui:ListView.View>
                <GridView>
                    <GridViewColumn Width="70" Header="{Binding ViewModel.HeaderChart}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox HorizontalAlignment="Center" IsChecked="{Binding ShowInChart, Mode=TwoWay}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Width="220"
                        DisplayMemberBinding="{Binding DisplayName}"
                        Header="{Binding ViewModel.HeaderDisplayName}" />
                    <GridViewColumn
                        Width="160"
                        DisplayMemberBinding="{Binding ServiceName}"
                        Header="{Binding ViewModel.HeaderServiceName}" />
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding StatusText}"
                        Header="{Binding ViewModel.HeaderStatus}" />
                    <GridViewColumn
                        Width="110"
                        DisplayMemberBinding="{Binding CpuUsage, StringFormat='{}{0:F1}'}"
                        Header="{Binding ViewModel.HeaderCpu}" />
                    <GridViewColumn
                        Width="130"
                        DisplayMemberBinding="{Binding MemoryMB, StringFormat='{}{0:F1}'}"
                        Header="{Binding ViewModel.HeaderMemory}" />
                </GridView>
            </ui:ListView.View>
        </ui:ListView>

        <!--  Filter Popups  -->
        <Popup
            x:Name="StatusFilterPopup"
            AllowsTransparency="True"
            IsOpen="{Binding ViewModel.IsStatusFilterOpen, Mode=TwoWay}"
            Placement="Bottom"
            StaysOpen="False">
            <Border Style="{StaticResource FilterPopupBorder}">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,6"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="Filter by Status" />
                    <CheckBox
                        Content="Running"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        IsChecked="{Binding ViewModel.FilterRunning, Mode=TwoWay}" />
                    <CheckBox
                        Margin="0,4,0,0"
                        Content="Stopped"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        IsChecked="{Binding ViewModel.FilterStopped, Mode=TwoWay}" />
                    <CheckBox
                        Margin="0,4,0,0"
                        Content="Other"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        IsChecked="{Binding ViewModel.FilterOther, Mode=TwoWay}" />
                </StackPanel>
            </Border>
        </Popup>

        <Popup
            x:Name="CpuFilterPopup"
            AllowsTransparency="True"
            IsOpen="{Binding ViewModel.IsCpuFilterOpen, Mode=TwoWay}"
            Placement="Bottom"
            StaysOpen="False">
            <Border Style="{StaticResource FilterPopupBorder}">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,6"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="Filter by CPU (%)" />
                    <CheckBox
                        Content="Enable filter"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        IsChecked="{Binding ViewModel.CpuFilterEnabled, Mode=TwoWay}" />
                    <StackPanel Margin="0,6,0,0" Orientation="Horizontal">
                        <ComboBox
                            Width="55"
                            Margin="0,0,6,0"
                            ItemsSource="{Binding ViewModel.FilterOperators}"
                            SelectedItem="{Binding ViewModel.CpuFilterOp, Mode=TwoWay}" />
                        <TextBox
                            Width="60"
                            Text="{Binding ViewModel.CpuFilterValue, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="%" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

        <Popup
            x:Name="MemFilterPopup"
            AllowsTransparency="True"
            IsOpen="{Binding ViewModel.IsMemFilterOpen, Mode=TwoWay}"
            Placement="Bottom"
            StaysOpen="False">
            <Border Style="{StaticResource FilterPopupBorder}">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,6"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="Filter by Memory (MB)" />
                    <CheckBox
                        Content="Enable filter"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        IsChecked="{Binding ViewModel.MemFilterEnabled, Mode=TwoWay}" />
                    <StackPanel Margin="0,6,0,0" Orientation="Horizontal">
                        <ComboBox
                            Width="55"
                            Margin="0,0,6,0"
                            ItemsSource="{Binding ViewModel.FilterOperators}"
                            SelectedItem="{Binding ViewModel.MemFilterOp, Mode=TwoWay}" />
                        <TextBox
                            Width="60"
                            Text="{Binding ViewModel.MemFilterValue, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="MB" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

        <!--  Chart Header  -->
        <Grid Grid.Row="5" Margin="0,8,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Text="{Binding ViewModel.ChartTitle, Mode=OneWay}" />

            <ui:Button
                Grid.Column="1"
                Margin="12,0,0,0"
                Appearance="Transparent"
                Command="{Binding ViewModel.ClearChartCommand, Mode=OneWay}"
                Icon="{ui:SymbolIcon Delete24}"
                ToolTip="Clear chart data" />
        </Grid>

        <!--  Charts: CPU (left) + Memory (right)  -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                x:Name="CpuChartHost"
                Grid.Column="0"
                Margin="0,0,4,0" />
            <Border
                x:Name="MemoryChartHost"
                Grid.Column="1"
                Margin="4,0,0,0" />
        </Grid>

        <!--  Delete Confirmation Overlay  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="8"
            Visibility="{Binding ViewModel.IsDeleteDialogOpen, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="#80000000" />
            <Border
                Padding="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{DynamicResource ApplicationBackgroundBrush}"
                CornerRadius="8">
                <StackPanel MaxWidth="400">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Delete Service?" />
                    <TextBlock Margin="0,12,0,0" TextWrapping="Wrap">
                        <Run Text="This will permanently remove" />
                        <Run FontWeight="Bold" Text="{Binding ViewModel.SelectedService.DisplayName, Mode=OneWay}" />
                        <Run Text="from the system. This action cannot be undone." />
                    </TextBlock>
                    <StackPanel
                        Margin="0,24,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <ui:Button
                            Margin="0,0,8,0"
                            Command="{Binding ViewModel.CancelDeleteServiceCommand, Mode=OneWay}"
                            Content="Cancel" />
                        <ui:Button
                            Appearance="Danger"
                            Command="{Binding ViewModel.ConfirmDeleteServiceCommand, Mode=OneWay}"
                            Content="Delete"
                            Icon="{ui:SymbolIcon Delete24}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
