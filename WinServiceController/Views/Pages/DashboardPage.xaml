<Page
  x:Class="WinServiceController.Views.Pages.DashboardPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:helpers="clr-namespace:WinServiceController.Helpers"
  xmlns:local="clr-namespace:WinServiceController.Views.Pages"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  Title="DashboardPage"
  d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
  ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  mc:Ignorable="d"
>
  <Page.Resources>
    <helpers:InverseBoolConverter x:Key="InverseBoolConverter" />
  </Page.Resources>
  <Grid Margin="0,0,0,24">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!-- Header -->
    <StackPanel Grid.Row="0" Orientation="Horizontal">
      <TextBlock
        FontSize="24"
        FontWeight="SemiBold"
        Text="Dashboard"
      />
      <ui:Button
        Margin="16,0,0,0"
        VerticalAlignment="Center"
        Appearance="Transparent"
        Command="{Binding ViewModel.RefreshCommand, Mode=OneWay}"
        Icon="{ui:SymbolIcon ArrowSync24}"
        ToolTip="Refresh"
      />
    </StackPanel>

    <!-- Summary Cards -->
    <UniformGrid Grid.Row="1" Margin="0,24,0,0" Columns="3">
      <ui:CardControl Margin="0,0,8,0" Icon="{ui:SymbolIcon Apps24}">
        <ui:CardControl.Header>
          <StackPanel>
            <TextBlock FontSize="13" Opacity="0.6" Text="Total Services" />
            <TextBlock
              FontSize="28"
              FontWeight="Bold"
              Text="{Binding ViewModel.TotalServices, Mode=OneWay}"
            />
          </StackPanel>
        </ui:CardControl.Header>
      </ui:CardControl>

      <ui:CardControl Margin="4,0,4,0" Icon="{ui:SymbolIcon PlayCircle24}">
        <ui:CardControl.Header>
          <StackPanel>
            <TextBlock FontSize="13" Opacity="0.6" Text="Running" />
            <TextBlock
              FontSize="28"
              FontWeight="Bold"
              Foreground="Green"
              Text="{Binding ViewModel.RunningServices, Mode=OneWay}"
            />
          </StackPanel>
        </ui:CardControl.Header>
      </ui:CardControl>

      <ui:CardControl Margin="8,0,0,0" Icon="{ui:SymbolIcon Stop20}">
        <ui:CardControl.Header>
          <StackPanel>
            <TextBlock FontSize="13" Opacity="0.6" Text="Stopped" />
            <TextBlock
              FontSize="28"
              FontWeight="Bold"
              Foreground="OrangeRed"
              Text="{Binding ViewModel.StoppedServices, Mode=OneWay}"
            />
          </StackPanel>
        </ui:CardControl.Header>
      </ui:CardControl>
    </UniformGrid>

    <!-- Engine Control Panel -->
    <ui:Card Grid.Row="2" Margin="0,16,0,0" Padding="16">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
          <StackPanel Orientation="Horizontal">
            <ui:SymbolIcon Margin="0,0,8,0" Symbol="PlugConnected24" />
            <TextBlock FontSize="13" Opacity="0.6" Text="Monitoring Engine (C++ Service)" />
          </StackPanel>
          <TextBlock
            Margin="0,4,0,0"
            FontSize="16"
            FontWeight="SemiBold"
            Text="{Binding ViewModel.EngineStatus, Mode=OneWay}"
          />
        </StackPanel>

        <StackPanel
          Grid.Row="1"
          Margin="0,12,0,0"
          HorizontalAlignment="Left"
          Orientation="Horizontal"
        >
          <ui:Button
            Margin="0,0,8,0"
            Appearance="Primary"
            Command="{Binding ViewModel.InstallEngineCommand, Mode=OneWay}"
            Content="Install"
            Icon="{ui:SymbolIcon ArrowDownload24}"
            IsEnabled="{Binding ViewModel.IsEngineInstalled, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}"
          />
          <ui:Button
            Margin="0,0,8,0"
            Appearance="Danger"
            Command="{Binding ViewModel.UninstallEngineCommand, Mode=OneWay}"
            Content="Uninstall"
            Icon="{ui:SymbolIcon Delete24}"
            IsEnabled="{Binding ViewModel.IsEngineInstalled, Mode=OneWay}"
          />
          <ui:Button
            Margin="0,0,8,0"
            Appearance="Success"
            Command="{Binding ViewModel.StartEngineCommand, Mode=OneWay}"
            Content="Start"
            Icon="{ui:SymbolIcon Play24}"
            IsEnabled="{Binding ViewModel.IsEngineRunning, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}"
          />
          <ui:Button
            Appearance="Caution"
            Command="{Binding ViewModel.StopEngineCommand, Mode=OneWay}"
            Content="Stop"
            Icon="{ui:SymbolIcon Stop24}"
            IsEnabled="{Binding ViewModel.IsEngineRunning, Mode=OneWay}"
          />
        </StackPanel>
      </Grid>
    </ui:Card>
  </Grid>
</Page>
